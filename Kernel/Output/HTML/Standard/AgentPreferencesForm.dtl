<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor0"}">
  <td align="left"> 
  <b><font color="$Env{"FontColor1"}">$Env{"Box0"}$Text{"Change Password"}$Env{"Box1"}</font></b>
  </td>
  <td align="right">
  <b><font color="$Env{"FontColor1"}">-</font></b>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="center" valign="top" colspan="2">

<p>
<form action="$Env{"CGIHandle"}" method="post">
<input type="hidden" name="Action" value="$Env{"Action"}">
<input type="hidden" name="Subaction" value="UpdatePw">
<input type="hidden" name="SessionID" value="$Env{"SessionID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0">
  <tr>
    <td>$Text{"New password"}:</td><td><input type="password" name="NewPw" value="" size="12"></td>
  </tr>
  <tr>
    <td>$Text{"New password again"}:</td><td><input type="password" name="NewPw1" value="" size="12"></td>
  </tr>
  </table>
<br>
<input type="submit" value="$Text{"update"}">
</form>
</p>

  </td> 
</tr>
</table>
<!-- end form -->


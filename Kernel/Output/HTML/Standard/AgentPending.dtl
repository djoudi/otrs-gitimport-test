<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td align="left" bgcolor="$Env{"BGTableColor2"}">
  <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Set Pending"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </font>
  </td>
  <td align="right" bgcolor="$Env{"BGTableColor2"}">
  <b><font color="$Env{"FontColor0"}">-</font></b>
  </font>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="left" valign="top" colspan="2">
<p>

<form action="$Env{"CGIHandle"}" method="post">
<input type="hidden" name="Action" value="AgentPending">
<input type="hidden" name="Subaction" value="Store">
<input type="hidden" name="QueueID" value="$Data{"QueueID"}">
<input type="hidden" name="TicketID" value="$Data{"TicketID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0" width="100%">
  <tr>
    <td width="20%">$Text{"Subject"}:</td>
    <td width="80%"><input type="text" name="Subject" value="$Text{"$Config{"DefaultCloseNoteSubject"}"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Note Text"}:</td><td>
<textarea name="Text" rows="15" cols="60" wrap="$Env{"BrowserWrap"}">
$Text{"$Config{"DefaultCloseNoteText"}"}
</textarea>
    </td>
  </tr>
  <tr>
    <td>$Text{"Note type"}:</td><td>$Data{"NoteTypesStrg"}</td>
  </tr>
  <tr>
    <td>$Text{"Pending type"}:</td><td>$Data{"NextStatesStrg"}</td>
  </tr>
  <tr>
    <td>$Text{"Pending date"}:</td><td>$Data{"DateString"}</td>
  </tr>
#  <tr>
#    <td>$Text{"Next Queue"}:</td><td>$Data{"MoveQueuesStrg"}</td>
#  </tr>
  <tr>
    <td>$Text{"Time units"}$Text{"$Config{"TimeUnits"}"}:</td><td><input type="text" name="TimeUnits" value="" size="3"></td>
  </tr>
  </table>
<br>
<input type="submit" value="$Text{"store"}">
</form>

</p>

  </td> 
</tr>
</table>
<!-- end form -->


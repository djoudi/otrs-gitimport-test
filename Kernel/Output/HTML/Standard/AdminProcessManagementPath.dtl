    Core.Config.Set('Config.TransitionEntityID', "$Data{"TransitionEntityID"}" );
    Core.Config.Set('Config.ProcessEntityID', "$Data{"ProcessEntityID"}" );
//]]></script>
<!--dtl:js_on_document_complete-->


<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor0"}">
  <td align="left" width="50%"> 
   <b><font color="$Env{"FontColor1"}">$Env{"Box0"}$Text{"Ticket#"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b> <font color="red">$Text{"$Data{"Message"}"}</font>
  </td>
  <td align="right" width="49%">
   <b><font color="$Env{"FontColor1"}">$Env{"Box0"}$Text{"Age"}: $Data{"Age"}$Env{"Box1"}</font></b>
  </td>
</tr>
</table>
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor2"}" width="80%">
  <td width="70%">
    <a href="$Env{"Baselink"}Action=AgentZoom&TicketID=$Data{"TicketID"}">$Text{"Zoom"}</a> -
    <a href="$Env{"Baselink"}Action=AgentLock&Subaction=Unlock&TicketID=$Data{"TicketID"}">$Text{"Unlock"}</a> -
    <a href="$Env{"Baselink"}Action=AgentPriority&TicketID=$Data{"TicketID"}">$Text{"Priority"}</a> -
    <a href="$Env{"Baselink"}Action=AgentHistory&TicketID=$Data{"TicketID"}">$Text{"History"}</a> -
    <a href="$Env{"Baselink"}Action=AgentOwner&TicketID=$Data{"TicketID"}">$Text{"Owner"}</a> -
    <a href="$Env{"Baselink"}Action=AgentNote&TicketID=$Data{"TicketID"}">$Text{"Add Note"}</a> -
    <a href="$Env{"Baselink"}Action=AgentCustomer&TicketID=$Data{"TicketID"}">$Text{"Customer"}</a> -
    <a href="$Env{"Baselink"}Action=AgentClose&TicketID=$Data{"TicketID"}">$Text{"Close"}</a>
  </td>
  <td align="right" bgcolor="$Env{"BGTableColor2"}" width="20%">
    <b>$Text{"Created"}:</b> $Data{"Created"}
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}" valign="top" colspan="2">
  <td>
  <table border="0">
    <tr>
      <td><b>$Text{"From"}:</b></td><td> $Data{"From"}</td>
    </tr>
    <tr>
      <td><b>$Text{"To"}:</b></td><td> $Data{"To"}</td>
    </tr>
    <tr>
      <td><b>$Text{"Subject"}:</b></td><td> $Data{"Subject"}</td>
    </tr>
  </table>
  </td>
  <td align="left"> 
  <table border="0">
    <tr>
      <td>$Text{"State"}:</td><td> <font color="red">$Text{"$Data{"State"}"}</font></td>
    </tr>
    <tr>
      <td>$Text{"Priority"}:</td><td> <font color="red">$Text{"$Data{"Priority"}"}</font></td>
    </tr>
    <tr>
      <td>$Text{"Queue"}:</td><td> $Data{"Queue"}</td>
    </tr>
    <tr>
      <td>$Text{"CustomerID"}:</td><td> $Data{"CustomerID"}</td>
    </tr>
  </table>
  </td>
</tr>
</table>
<!-- end form -->


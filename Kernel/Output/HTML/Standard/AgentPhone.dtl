<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor2"}">
  <td align="left"> 
  <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Phone call"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </td>
  <td align="right">
  <b><font color="$Env{"FontColor0"}">-</font></b>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="left" valign="top" colspan="2">

<p>

<form action="$Env{"CGIHandle"}" method="post">
<input type="hidden" name="Action" value="$Env{"Action"}">
<input type="hidden" name="Subaction" value="Store">
<input type="hidden" name="QueueID" value="$Data{"QueueID"}">
<input type="hidden" name="TicketID" value="$Data{"TicketID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0">
  <tr>
    <td>$Text{"Subject"}:</td><td><input type="text" name="Subject" value="$Config{"PhoneDefaultSubject"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Text"}:</td><td>
<textarea name="Note" rows="15" cols="60" wrap="$Env{"BrowserWrap"}">
$Text{"$Config{"PhoneDefaultNoteText"}"}
</textarea>
    </td>
  </tr>
  <tr>
    <td>$Text{"Next ticket state"}:</td><td>$Data{"NextStatesStrg"}</td>
  </tr>
  <tr>
    <td>$Text{"Is the ticket answered"}:</td><td>$Data{"AnsweredYesNoOption"}</td>
  </tr>
  <tr>
    <td>$Text{"Time units"}$Text{"$Config{"TimeUnits"}"}:</td><td><input type="text" name="TimeUnits" value="" size="3"></td>
  </tr>
  </table>
<br>
<input type="submit" value="$Text{"store"}">
</form>

</p>

  </td> 
</tr>
</table>
<!-- end form -->


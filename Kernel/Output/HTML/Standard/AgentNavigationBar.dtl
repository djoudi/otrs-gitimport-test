# --
# check if the admin link should be shown
# --
<dtl if ($Env{"UserIsGroup[admin]"} eq "Yes") { $Data{"AdminLink"} = "<td valign="top" align="center" class="nav"><a href="$Env{"Baselink"}Action=Admin" onmouseover="window.status='$Text{"Admin-Area"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}admin.png" alt="$Text{"Admin-Area"}"><br>$Text{"Admin-Area"}</a></td>"; }>
# --
# check if the faq link should be shown
# --
<dtl if ($Env{"UserIsGroupRo[faq]"} eq "Yes") { $Data{"FAQLink"} = "<td valign="top" align="center" class="nav"><a href="$Env{"Baselink"}Action=FAQ" onmouseover="window.status='$Text{"FAQ-Area"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}help.png" alt="$Text{"FAQ-Area"}"><br>$Text{"FAQ-Area"}</a></td>"; }>
# --
# check if the stats link should be shown
# --
<dtl if ($Env{"UserIsGroup[stats]"} eq "Yes") { $Data{"StatsLink"} = "<td valign="top" align="center" class="nav"><a href="$Env{"Baselink"}Action=SystemStats" onmouseover="window.status='$Text{"Stats"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}stats.png" alt="$Text{"Stats"}"><br>$Text{"Stats"}</a></td>"; }>

<!-- start NavigationBar -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td valign="top" align="left" width="70%" class="nav">
    <table cellspacing="1" cellpadding="3">
    <tr>
      <td valign="top" align="center" class="nav">
        <a href="$Env{"Baselink"}Action=Logout" onmouseover="window.status='$Text{"Logout"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}exit.png" alt="$Text{"Logout"}"><br>$Text{"Logout"}</a>
      </td>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentQueueView" onmouseover="window.status='$Text{"QueueView"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}queue.png" alt="$Text{"QueueView"}"><br>$Text{"QueueView"}</a>
      </td>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentPhone" onmouseover="window.status='$Text{"PhoneView"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}new.png" alt="$Text{"PhoneView"}"><br>$Text{"PhoneView"}</a> 
      </td>
# TicketStatus - remove this if you want a link for ticket status
#      <td valign="top" align="center" class="nav">
#        <a href="$Env{"Baselink"}Action=AgentStatusView" onmouseover="window.status='$Text{"QueueList"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}list.png" alt="$Text{"Open-Tickets"}"><br>$Text{"Open-Tickets"}</a>
#      </td>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentUtilities" onmouseover="window.status='$Text{"Utilities"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}search.png" alt="$Text{"Utilities"}"><br>$Text{"Utilities"}</a>
      </td>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentPreferences" onmouseover="window.status='$Text{"Preferences"}'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}prefer.png" alt="$Text{"Preferences"}"><br>$Text{"Preferences"}</a>
      </td>
      $Data{"StatsLink"}
      $Data{"FAQLink"}
      $Data{"AdminLink"}
    </tr>
    </table>
  </td>
  <td valign="top" align="right" width="30%" class="nav">   
    <table>
    <tr>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=New" onmouseover="window.status='$Text{"new message"} ($Data{"New"})'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}new-message.png" alt="$Text{"new message"}"><br>$Text{"new message"} ($Data{"New"})</a>      
      </td>
      <td valign="top" align="center" class="nav"> 
        <a href="$Env{"Baselink"}Action=AgentMailbox" onmouseover="window.status='$Text{"Locked tickets"} ($Data{"All"})'; return true;" onmouseout="window.status='';" class="navitem"><img border="0" src="$Env{"Images"}personal.png" alt="$Text{"Locked tickets"}"><br>$Text{"Locked tickets"} ($Data{"All"})</a> 
      </td>
    </tr>
  </table>
  </td>
</tr>
</table>
<!-- end NavigationBar -->

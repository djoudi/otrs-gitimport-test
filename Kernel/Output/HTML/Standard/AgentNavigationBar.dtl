# --
# check if the admin link should be shown
# --
<dtl if ($Env{"UserIsAdmin"} eq "Yes") { $Data{"AdminLink"} = "$Env{"Box0"}<a href="$Env{"Baselink"}Action=Admin" onmouseover="window.status='$Text{"AdminArea"}'; return true;" onmouseout="window.status='';">$Text{"AdminArea"}</a>$Env{"Box1"}"; }>
# --
# check if the stats link should be shown
# --
<dtl if ($Env{"UserIsStats"} eq "Yes") { $Data{"StatsLink"} = "$Env{"Box0"}<a href="$Env{"Baselink"}Action=SystemStats" onmouseover="window.status='$Text{"Stats"}'; return true;" onmouseout="window.status='';">$Text{"Stats"}</a>$Env{"Box1"}"; }>

<!-- start NavigationBar -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td valign="top" align="left" width="40%" class="table1">
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=Logout" onmouseover="window.status='$Text{"Logout"}'; return true;" onmouseout="window.status='';">$Text{"Logout"}</a>$Env{"Box1"} 
    $Data{"AdminLink"}
    <br>
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentQueueView" onmouseover="window.status='$Text{"QueueView"}'; return true;" onmouseout="window.status='';">$Text{"QueueView"}</a>$Env{"Box1"}
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentPhone" onmouseover="window.status='$Text{"PhoneView"}'; return true;" onmouseout="window.status='';">$Text{"PhoneView"}</a>$Env{"Box1"}
  </td>
  <td align="right" width="60%" class="table1">
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentUtilities" onmouseover="window.status='$Text{"Utilities"}'; return true;" onmouseout="window.status='';">$Text{"Utilities"}</a>$Env{"Box1"}
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentPreferences" onmouseover="window.status='$Text{"Preferences"}'; return true;" onmouseout="window.status='';">$Text{"Preferences"}</a>$Env{"Box1"}
    $Data{"StatsLink"}
    $Env{"Box0"}<a href="#end" onmouseover="window.status='$Text{"Bottom of Page"}'; return true;" onmouseout="window.status='';">$Text{"Bottom of Page"}</a>$Env{"Box1"}
    <br>
    <!--$Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentFAQ" onmouseover="window.status='$Text{"FAQ"}'; return true;" onmouseout="window.status='';">$Text{"FAQ"}</a>$Env{"Box1"}-->
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=New" onmouseover="window.status='$Text{"new message"} ($Data{"New"})'; return true;" onmouseout="window.status='';">$Text{"new message"} ($Data{"New"})</a>$Env{"Box1"} 
    $Env{"Box0"}<a href="$Env{"Baselink"}Action=AgentMailbox" onmouseover="window.status='$Text{"Locked tickets"} ($Data{"All"})'; return true;" onmouseout="window.status='';">$Text{"Locked tickets"} ($Data{"All"})</a>$Env{"Box1"} 
  </td>
</tr>
</table>
<!-- end NavigationBar -->

<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            $Env{"Box0"}$Text{"History of"} $Config{"Ticket::Hook"}: $QData{"TicketNumber"}$Env{"Box1"}
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}$Env{"LastScreenView"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>
    <tr>
        <td class="mainbody">
            <table border="0" cellspacing="0" cellpadding="2" width="100%">
                <tr class="contenthead">
                    <td>
                        $Text{"Action"}:
                    </td>
                    <td>
                        $Text{"Comment"}:
                    </td>
                    <td width="60" align="center">
                        $Text{"Zoom"}:
                    </td>
                    <td>
                        $Text{"User"}:
                    </td>
                    <td>
                        $Text{"Createtime"}:
                    </td>
                </tr>
<!-- dtl:block:Row -->
                <tr>
                    <td>
                        $Quote{"$Data{"HistoryType"}"}
                    </td>
                    <td>
                        <div title="$QData{"Name"}">$QData{"Name","100"}</div>
                    </td>
                    <td>
<!-- dtl:block:NoLinkZoom -->
                        -
<!-- dtl:block:NoLinkZoom -->
<!-- dtl:block:ShowLinkZoom -->
                        <a class ="AsBlock" href="$Env{"Baselink"}Action=AgentTicketZoom;TicketID=$LQData{"TicketID"};ArticleID=$LQData{"ArticleID"}" onmouseover="window.status='$JSText{"Zoom"}'; return true;" onmouseout="window.status='';">
                            $Text{"Zoom view"}
                        </a>
<!-- dtl:block:ShowLinkZoom -->
                    </td>
                    <td>
                        <div title="$Quote{"$Data{"UserLogin"} ($Data{"UserFirstname"} $Data{"UserLastname"})"}">
                            $Quote{"$Data{"UserLogin"}"} ($Quote{"$Data{"UserFirstname"} $Data{"UserLastname"}","20"})
                        </div>
                    </td>
                    <td>
                        $TimeLong{"$Data{"CreateTime"}"}
                    </td>
                </tr>
<!-- dtl:block:Row -->
                <tr class="contenthead">
                    <td colspan="5">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<!-- end form -->

<div class="WidgetPopup ARIARoleMain">

    <div class="Header">
        <h1>
            $Text{"History of"} $Config{"Ticket::Hook"}: $QData{"TicketNumber"}
        </h1>
        <p>
            <a href="#" class="CancelClosePopup">$Text{"Close window"}</a>
        </p>
    </div>

    <div class="Content">
        <div class="WidgetSimple">
            <div class="Header">
                <h2>
                    $Text{"History Content"}
                </h2>
            </div>
            <div class="Content">
                <table class="DataTable">
                    <thead>
                        <tr>
                            <th>$Text{"Action"}</th>
                            <th>$Text{"Comment"}</th>
                            <th>$Text{"Zoom"}</th>
                            <th>$Text{"User"}</th>
                            <th>$Text{"Createtime"}</th>
                        </tr>
                    </thead>
                    <tbody>

<!-- dtl:block:Row -->
                        <tr>
                            <td>
                                $Quote{"$Data{"HistoryType"}"}
                            </td>
                            <td>
                                $QData{"Name","100"}
                            </td>
                            <td>
<!-- dtl:block:NoLinkZoom -->
                                -
<!-- dtl:block:NoLinkZoom -->
<!-- dtl:block:ShowLinkZoom -->
                                <a id="Zoom$QData{"TicketID"}" class="AsBlock" href="#">$Text{"Zoom view"}</a>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('click', $('#Zoom$QData{"TicketID"}'), function () {
        window.opener.Core.UI.Popup.FirePopupEvent('URL', { URL: '$Env{"Baselink"}Action=AgentTicketZoom;TicketID=$LQData{"TicketID"};ArticleID=$LQData{"ArticleID"}'});
        window.close();
    });
//]]></script>
<!--dtl:js_on_document_complete-->
<!-- dtl:block:ShowLinkZoom -->
                            </td>
                            <td>
                                $QData{"UserLogin"} ($Quote{"$Data{"UserFirstname"} $Data{"UserLastname"}","20"})
                            </td>
                            <td>
                                $TimeLong{"$Data{"CreateTime"}"}
                            </td>
                        </tr>
<!-- dtl:block:Row -->

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

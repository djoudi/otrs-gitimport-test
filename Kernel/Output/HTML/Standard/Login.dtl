<!-- end header -->
<body>

<center>

<p>
<font color="red">$Text{"$Data{"Message"}"}</font>
</p>

<p>
<form action="$Env{"CGIHandle"}" method="post" enctype="application/x-www-form-urlencoded">
<input type="hidden" name="Action" value="Login">
<input type="hidden" name="RequestedURL" value="$Data{"RequestedURL"}">
<input type="hidden" name="Lang" value="$Env{"UserLanguage"}">

<table border="0" cellspacing="0" cellpadding="3" width="250">
<tr>
  <td class="table0" align="center"><b>$Text{"Welcome to OTRS"}</b></td>
</tr>
<tr>
  <td class="table1" align="center">
    <table cellspacing="8" cellpadding="2">
    <tr>
      <td class="table1">$Text{"Username"}:</td>
      <td class="table1"><input type="text" name="User" value="$Data{"User"}" size="18"></td>
    </tr>
    <tr>
      <td class="table1">$Text{"Password"}:</td>
      <td class="table1"><input type="password" name="Password" size="18"></td>
    </tr>
    </table>
  <input class="button" type="submit" value="$Text{"Login"}">
  </td>
</tr>
</table>
</form>
</p>
# --
# language
# --
<p>
<form action="$Env{"CGIHandle"}" method="post" enctype="application/x-www-form-urlencoded">
<input type="hidden" name="Action" value="">
<input type="hidden" name="RequestedURL" value="$Data{"RequestedURL"}">

<table border="0" cellspacing="0" cellpadding="3" width="250">
<tr>
  <td class="table0" align="center"><b>$Text{"Language"}</b></td>
</tr>
<tr>
  <td align="center" class="table1">
    <table cellspacing="8" cellpadding="2">
    <tr>
      <td class="table1">$Text{"Language"}:</td>
      <td class="table1">$Data{"Language"}</td>
    </tr>
    </table>
  <input class="button" type="submit" value="$Text{"submit"}">
  </td>
</tr>
</table>
</form>
</p>
# --
# Message of the day data!
# --
$Data{"Motd"}

</center>

<!-- start footer -->
</body>
</html>
<!-- end footer -->

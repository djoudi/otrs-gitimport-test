<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('change', $('#TypeID'), function (Event) {
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'TypeID', ['NewUserID', 'NewResponsibleID', 'NextStateID', 'PriorityID', 'ServiceID', 'SLAID', 'SignKeyID', 'CryptKeyID', 'TicketFreeText1', 'TicketFreeText2', 'TicketFreeText3', 'TicketFreeText4', 'TicketFreeText5', 'TicketFreeText6', 'TicketFreeText7', 'TicketFreeText8', 'TicketFreeText9', 'TicketFreeText10', 'TicketFreeText11', 'TicketFreeText12', 'TicketFreeText13', 'TicketFreeText14', 'TicketFreeText15', 'TicketFreeText16', 'To', 'Cc', 'Bcc']);
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TicketType -->

                        <label for="Dest">$Text{"From queue"}:</label>
                        <div class="Field">
                            $Data{"FromStrg"}
                            <div id="DestServerError" class="TooltipErrorMessage">
                                <p>$Text{"$Data{"Destination invalid"}"}</p>
                            </div>
                            <span class="Error Small">$Text{"$Data{"Destination invalid"}"}</span>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('change', $('#Dest'), function (Event) {
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'Dest', ['Signature', 'NewUserID', 'NewResponsibleID', 'NextStateID', 'PriorityID', 'ServiceID', 'SLAID', 'SignKeyID', 'CryptKeyID', 'TicketFreeText1', 'TicketFreeText2', 'TicketFreeText3', 'TicketFreeText4', 'TicketFreeText5', 'TicketFreeText6', 'TicketFreeText7', 'TicketFreeText8', 'TicketFreeText9', 'TicketFreeText10', 'TicketFreeText11', 'TicketFreeText12', 'TicketFreeText13', 'TicketFreeText14', 'TicketFreeText15', 'TicketFreeText16', 'To', 'Cc', 'Bcc']);
        $('#Signature').attr('src', '$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Signature&Dest=' + $(this).val());
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>

                        <label for="CustomerAutoComplete">$Text{"To"}:</label>
                        <div class="Field">
                            <input id="CustomerAutoComplete" type="text" name="To" value="$QData{"To"}" class="W75pc AutocompleteOff" />
                            <span class="Error Small">$Text{"$Data{"To invalid"}"}</span>
                        </div>
                        <div class="Clear"></div>

                        <label for="Cc">$Text{"Cc"}:</label>
                        <div class="Field">
                            <input type="text" name="Cc" id="Cc" value="$QData{"Cc"}"  class="W75pc" />
                            <span class="Error Small">$Text{"$Data{"Cc invalid"}"}</span>
                        </div>
                        <div class="Clear"></div>

                        <label for="Bcc">$Text{"Bcc"}:</label>
                        <div class="Field">
                            <input type="text" name="Bcc" id="Bcc" value="$QData{"Bcc"}" class="W75pc"/>
                            <span class="Error Small">$Text{"$Data{"Bcc invalid"}"}</span>
                        </div>
                        <div class="Clear"></div>

<!-- dtl:block:TicketService -->
                        <label for="ServiceID">$Text{"Service"}:</label>
                        <div class="Field">
                            $Data{"ServiceStrg"}
                            <span class="Error Small">$Text{"$Data{"Service invalid"}"}</span>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('change', $('#ServiceID'), function (Event) {
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'ServiceID', ['NewUserID', 'NewResponsibleID', 'NextStateID', 'PriorityID', 'ServiceID', 'SLAID', 'SignKeyID', 'CryptKeyID', 'TicketFreeText1', 'TicketFreeText2', 'TicketFreeText3', 'TicketFreeText4', 'TicketFreeText5', 'TicketFreeText6', 'TicketFreeText7', 'TicketFreeText8', 'TicketFreeText9', 'TicketFreeText10', 'TicketFreeText11', 'TicketFreeText12', 'TicketFreeText13', 'TicketFreeText14', 'TicketFreeText15', 'TicketFreeText16', 'To', 'Cc', 'Bcc']);
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TicketService -->

<!-- dtl:block:TicketSLA -->
                        <label for="SLAID">$Text{"SLA"}:</label>
                        <div class="Field">
                            $Data{"SLAStrg"}
                            <span class="Error Small">$Text{"$Data{"SLA invalid"}"}</span>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('change', $('#SLAID'), function (Event) {
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'SLAID', ['NewUserID', 'NewResponsibleID', 'NextStateID', 'PriorityID', 'ServiceID', 'SLAID', 'SignKeyID', 'CryptKeyID', 'TicketFreeText1', 'TicketFreeText2', 'TicketFreeText3', 'TicketFreeText4', 'TicketFreeText5', 'TicketFreeText6', 'TicketFreeText7', 'TicketFreeText8', 'TicketFreeText9', 'TicketFreeText10', 'TicketFreeText11', 'TicketFreeText12', 'TicketFreeText13', 'TicketFreeText14', 'TicketFreeText15', 'TicketFreeText16', 'To', 'Cc', 'Bcc']);
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TicketSLA -->

<!-- dtl:block:OwnerSelection -->
                        <label for="NewUserID">$Text{"Owner"}:</label>
                        <div class="Field">
                            $Data{"OptionStrg"}
                            <a href="" id="OwnerSelectionGetAll">$Text{"Get all"}</a>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('click', $('#OwnerSelectionGetAll'), function (Event) {
        $('#OwnerAll').val('1'); // Needed? Why?
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'OwnerAll', ['NewUserID']);
        return false;
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:OwnerSelection -->

<!-- dtl:block:ResponsibleSelection -->
                        <label for="NewResponsibleID">$Text{"Responsible"}:</label>
                        <div class="Field">
                            $Data{"ResponsibleOptionStrg"}
                            <a href="" id="ResponsibleSelectionGetAll">$Text{"Get all"}</a>
<!--dtl:js_on_document_complete-->
<script type="text/javascript">//<![CDATA[
    Core.UI.RegisterEvent('click', $('#ResponsibleSelectionGetAll'), function (Event) {
        $('#ResponsibleAll').val('1'); // Needed? Why?
        Core.AJAX.FormUpdate($('#NewEmailTicket'), 'AJAXUpdate', 'ResponsibleAll', ['NewResponsibleID']);
        return false;
    })
//]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:ResponsibleSelection -->

<!-- dtl:block:Option -->
                        <label>$Text{"$Data{"Key"}"}:</label>
                        <div class="Field">
                            $Data{"Value"}
                            <span class="Error Small">$Data{"Invalid"}</span>
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:Option -->

                        <label for="Subject">$Text{"Subject"}:</label>
                        <div class="Field">
                            <input type="text" class="Validate_Required" name="Subject" id="Subject" value="$QData{"Subject"}" class="W75pc"/>
                            <div id="SubjectError" class="TooltipErrorMessage"><p>$Text{"A message should have a subject!"}</p></div>
                            <span class="Error Small">$Text{"$Data{"Subject invalid"}"}</span>
                        </div>
                        <div class="Clear"></div>

                        <label>$Text{"Options"}:</label>
                        <div class="Field">

<!-- dtl:block:SpellCheck -->
                            <a href="" onclick="SpellCheckSubmit(); return false;" onmouseover="window.status='$JSText{"Spell Check"}'; return true;" onmouseout="window.status='';">
                                <img border="0" src="$Config{"Frontend::ImagePath"}spell.png" alt="" />
                                $Text{"Spell check"}
                            </a>
<!-- dtl:block:SpellCheck -->
<!-- dtl:block:AddressBook -->
                            <a href="" onclick="BookCheckSubmit(); return false;" onmouseover="window.status='$JSText{"Address Book"}'; return true;" onmouseout="window.status='';">
                                <img border="0" src="$Config{"Frontend::ImagePath"}contents.png" alt="" />
                                $Text{"Address book"}
                            </a>
<!-- dtl:block:AddressBook -->
<!-- dtl:block:OptionCustomer -->
                            <a href="" onclick="CustomerSubmit(); return false;" onmouseover="window.status='$JSText{"Customer"}'; return true;" onmouseout="window.status='';">
                                <img border="0" src="$Config{"Frontend::ImagePath"}group-small.png" alt="" />
                                $Text{"Customer"}
                            </a>
<!-- dtl:block:OptionCustomer -->
                        </div>
                        <div class="Clear"></div>

                        <label for="RichText">$Text{"Text"}:</label>
                        <div class="Clear"></div>
<!-- dtl:block:RichText -->
$Include{"RichTextEditor"}
<!-- dtl:block:RichText -->
                        <textarea id="RichText" class="RichText Wrap_$Env{"BrowserWrap"} Validate_RequiredRichtext" name="Body" rows="15" cols="$Config{"Ticket::Frontend::TextAreaEmail"}">$QData{"Body"}</textarea>
                        <div id="RichTextError" class="TooltipErrorMessage"><p>$Text{"A message should have a body!"}</p></div>
                        <div class="Clear"></div>

                        <label for="Signature">$Text{"Signature"}:</label>
                        <div class="Clear"></div>

                        <input type="hidden" name="Signature" value="$QData{"Signature"}"/>
                        <iframe height="140" width="620" frameborder="0" id="Signature" src="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Signature;QueueID=$QData{"QueueID"}"></iframe>
                        <div class="Clear"></div>

                        <label>$Text{"Attachment"}:</label>
                        <div class="Field">
                            <table>
<!-- dtl:block:Attachment -->
                                <tr>
                                    <td>$QData{"Filename"}</td>
                                    <td>$QData{"Filesize"}</td>
                                    <td align="right">
                                        <button type="submit" name="AttachmentDelete$QData{"FileID"}" value="$Text{"Delete"}">$Text{"Delete"}</button>
                                    </td>
                                </tr>
<!-- dtl:block:Attachment -->
                                <tr>
                                    <td colspan="2">
                                        <input name="file_upload" type="file" size="40" class="fixed"/>
                                    </td>
                                    <td align="right">
                                        <button type="submit" name="AttachmentUpload" value="$Text{"Attach"}">$Text{"Attach"}</button>
                                        <a name="attachment"></a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="Clear"></div>

                        <label for="CustomerID">$Text{"CustomerID"}:</label>
                        <div class="Field">
                            <input type="text" name="CustomerID" id="CustomerID" value="$QData{"CustomerID"}" class="W50pc"/>
                        </div>
                        <div class="Clear"></div>

                        <label for="NextStateID">$Text{"Next ticket state"}:</label>
                        <div class="Field">
                            $Data{"NextStatesStrg"}
                        </div>
                        <div class="Clear"></div>

                        <label>$Text{"Pending Date"} ($Text{"for pending* states"}):</label>
                        <div class="Field">
                            $Data{"PendingDateString"}
                            <span class="DatepickerIcon" id="PendingDatepicker">&nbsp;</span>
                            <div id="DayError" class="TooltipErrorMessage"><p>$Text{"Invalid date!"}</p></div>
                            <div id="MonthError" class="TooltipErrorMessage"><p>$Text{"Invalid date!"}</p></div>
                            <div id="YearError" class="TooltipErrorMessage"><p>$Text{"Invalid date!"}</p></div>
                            <div id="HourError" class="TooltipErrorMessage"><p>$Text{"Invalid date!"}</p></div>
                            <div id="MinuteError" class="TooltipErrorMessage"><p>$Text{"Invalid date!"}</p></div>
<!--dtl:js_on_document_complete-->
                            <script type="text/javascript">//<![CDATA[
                                Core.UI.Datepicker.Init({
                                    Day: $('#Day'),
                                    Month: $('#Month'),
                                    Year: $('#Year')
                                }, $('#PendingDatepicker'));
                            //]]></script>
<!--dtl:js_on_document_complete-->
                            <span class="Error Small">$Text{"$Data{"Date invalid"}"}</span>
                        </div>
                        <div class="Clear"></div>

                        <label for="PriorityID">$Text{"Priority"}:</label>
                        <div class="Field">
                            $Data{"PriorityStrg"}
                        </div>
                        <div class="Clear"></div>

<!-- dtl:block:TicketFreeText -->
                        <label for="TicketFreeText$Data{"Count"}">$Data{"TicketFreeKeyField"}:</label>
                        <div class="Field">
                            $Data{"TicketFreeTextField"}
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TicketFreeText -->

<!-- dtl:block:TicketFreeTime -->
                        <label for="TicketFreeTime$Data{"Count"}">$Data{"TicketFreeTimeKey"}:</label>
                        <div class="Field">
                            $Data{"TicketFreeTime"}
                            <span class="DatepickerIcon" id="TicketFreeTime$Data{"Count"}Datepicker">&nbsp;</span>
                            <div id="TicketFreeTime$Data{"Count"}UsedError" class="TooltipErrorMessage"><p>$Text{"Required!"}</p></div>
<!--dtl:js_on_document_complete-->
                            <script type="text/javascript">//<![CDATA[
                                Core.UI.Datepicker.Init({
                                    Day: $('#TicketFreeTime$Data{"Count"}Day'),
                                    Month: $('#TicketFreeTime$Data{"Count"}Month'),
                                    Year: $('#TicketFreeTime$Data{"Count"}Year')
                                }, $('#TicketFreeTime$Data{"Count"}Datepicker'));
                            //]]></script>
<!--dtl:js_on_document_complete-->
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TicketFreeTime -->

<!-- dtl:block:ArticleFreeText -->
                        <label for="ArticleFreeText$Data{"Count"}">$Data{"ArticleFreeKeyField"}:</label>
                        <div class="Field">
                            $Data{"ArticleFreeTextField"}
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:ArticleFreeText -->

<!-- dtl:block:TimeUnits -->
                        <label for="TimeUnits">$Text{"Time units"}$Text{"$Config{"Ticket::Frontend::TimeUnits"}"}:</label>
                        <div class="Field">
                            <input type="text" class="Validate_TimeUnits $Data{"TimeUnitsRequired"}" name="TimeUnits" id="TimeUnits" value="$QData{"TimeUnits"}" size="3"/>
                            <div id="TimeUnitsError" class="TooltipErrorMessage"><p>$Text{"Invalid time!"}</p></div>
                        </div>
                        <div class="Clear"></div>
<!-- dtl:block:TimeUnits -->

                    </fieldset>
                </div>
            </div>
        </div>
        <div class="Footer">
            <button class="Primary" id="submitRichText" accesskey="g" type="submit" value="$Text{"Send mail!"}" >$Text{"Send mail!"}</button>
        </div>
    </div>
</form>


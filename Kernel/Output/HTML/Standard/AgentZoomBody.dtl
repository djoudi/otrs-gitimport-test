<!-- start body ticket $Data{"TicketNumber"} -->
<tr>
  <td rowspan="2" valign="top" width="75%" class="table1">
    <a name="$Data{"ArticleID"}"></a>
    $Data{"ArticleStrg"}
    <hr>
    <table border="0" width="100%" cellspacing="0" cellpadding="1">
    <tr>
      <td valign="top" width="15%"><b>$Text{"From"}:</b></td>
      <td width="85%"> $QData{"From","160"}</td>
    </tr>
# --
# check if To exists
# -- 
    <dtl if ($Data{"To"} ne "") { $Data{"ArticleToString"} = "<tr><td valign="top"><b>$Text{"To"}:</b></td><td> $QData{"To","160"}</td></tr>"; }>
    $Data{"ArticleToString"}
# --
# check if Cc exists
# -- 
    <dtl if ($Data{"Cc"} ne "") { $Data{"ArticleCcString"} = "<tr><td valign="top"><b>$Text{"Cc"}:</b></td><td> $QData{"Cc","160"}</td></tr>"; }>
    $Data{"ArticleCcString"}
# --
    <tr>
      <td valign="top"><b>$Text{"Subject"}:</b></td>
      <td> $QData{"Subject","160"}</td>
    </tr>
    <tr>
      <td valign="top"><b>$Text{"Created"}:</b></td>
      <td> $TimeLong{"$Data{"Created"}"}</td>
    </tr>
# --
# show the Article::FreeKey1-3 and Article::FreeText1-3
# --
<dtl if ($Data{"FreeKey1"} ne "") { $Data{"ArticleFreeString1"} = "<tr><td valign="top"><b>$QData{"FreeKey1"}:</b></td><td> $QData{"FreeText1"}</td></tr>"; }>
<dtl if ($Data{"FreeKey2"} ne "") { $Data{"ArticleFreeString2"} = "<tr><td valign="top"><b>$QData{"FreeKey2"}:</b></td><td> $QData{"FreeText2"}</td></tr>"; }>
<dtl if ($Data{"FreeKey3"} ne "") { $Data{"ArticleFreeString3"} = "<tr><td valign="top"><b>$QData{"FreeKey3"}:</b></td><td> $QData{"FreeText"}</td></tr>"; }>
     $Data{"ArticleFreeString1"}
     $Data{"ArticleFreeString2"}
     $Data{"ArticleFreeString3"}
# --
# check if To exists
# -- 
    <dtl if ($Data{"ATM"} ne "") { $Data{"ArticleATMString"} = "<tr><td valign="top"><b>$Text{"Attachment"}:</b></td><td> $Data{"ATM"}</td></tr>"; }>
    $Data{"ArticleATMString"}
# --
  </table>
$Data{"BodyNote"}
<div class="message">
$Data{"Body"}
</div>
  </td> 
  <td width="25%" align="left" valign="top" class="PriorityID-$Data{"PriorityID"}">
# --
# show ticket status (state, lock, ...)
$Data{"TicketStatus"} 
# --

    <table border="0" cellspacing="0" cellpadding="1" width="95%">
    <tr>
      <td>
# --
# show compose links
$Data{"TicketAnswer"}
# --
# --
# show article links
$Data{"TicketArticle"}
# --
      </td>
    </tr>
    </table>
  </td>
</tr>
<tr>
  <td align="left" valign="bottom" class="PriorityID-$Data{"PriorityID"}">
   <p>
     <b>$Text{"Change queue"}:</b><br>
       <form action="$Env{"CGIHandle"}" method="get">
       <input type="hidden" name="Action" value="AgentMove">
       <input type="hidden" name="Subaction" value="InRage">
       <input type="hidden" name="QueueID" value="$Data{"QueueID"}">
       <input type="hidden" name="TicketID" value="$Data{"TicketID"}">
       $Data{"MoveQueuesStrg"}
       <input class="button" type="submit" value="$Text{"Move"}">
       </form>
   </p>
  </td>
</tr>
<!-- end body ticket -->

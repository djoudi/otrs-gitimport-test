</script>

<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr bgcolor="$Env{"BGTableColor2"}">
  <td align="left"> 
  <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Compose answer for ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="left" valign="top">

  <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="compose">
  <input type="hidden" name="Action" value="AgentCompose">
  <input type="hidden" name="Subaction" value="SendEmail">
  <input type="hidden" name="SessionID" value="$Env{"SessionID"}">
  <input type="hidden" name="QueueID" value="$Data{"QueueID"}">
  <input type="hidden" name="TicketID" value="$Data{"TicketID"}">
  <input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <input type="hidden" name="Email" value="$Data{"Email"}">
  <input type="hidden" name="InReplyTo" value="$Data{"InReplyTo"}">
  <table border="0">
    <tr>
      <td>$Text{"From"}:</td><td>$Data{"FromHTML"} <input type="hidden" name="From" value="$Data{"From"}"></td>
    </tr>
    <tr>
      <td>$Text{"To"}:</td><td><input type="text" name="To" value="$Data{"To"}" size="65"></td>
    </tr>
    <tr>
      <td>$Text{"Cc"}:</td><td><input type="text" name="Cc" value="$Data{"Cc"}" size="65"></td>
    </tr>
    <tr>
      <td>$Text{"Subject"}:</td><td><input type="text" name="Subject" value="$Data{"Subject"}" size="65"></td>
    </tr>
    <tr>
      <td valign="top">$Text{"Text"}:</td><td>
<pre>
<textarea name="Body" rows="25" cols="80">
$Data{"Salutation"}
$Data{"To"} $Text{"wrote"}:
$Data{"Body"}

$Data{"StdResponse"}

$Data{"Signature"}
</textarea>
</pre>
      </td>
    </tr>
    <tr>
      <td>$Text{"Attachment"}:</td><td><input name="file_upload" type="file" size="40" class="fixed">&nbsp;<!--<input type="button" class="button" onclick="attach()" value="$Text{"Attach"}">--> </td>
    </tr>
    <tr>
      <td>$Text{"Next ticket state"}:</td><td>$Data{"NextStatesStrg"}</td>
    </tr>
    <tr>
      <td>$Text{"Is the ticket answered"}:</td><td>$Data{"AnsweredYesNoOption"}</td>
    </tr>
    <tr>
      <td>$Text{"Time units"}$Text{"$Config{"TimeUnits"}"}:</td><td><input type="text" name="TimeUnits" value="" size="3"></td>
    </tr>
  </table>
  <br>
  <input type="submit" value="$Text{"Send mail!"}" onclick="return submit_compose();">
  </form>

  </td> 
</tr>
</table>
<!-- end compose form -->


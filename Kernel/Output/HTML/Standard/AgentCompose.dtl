<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr>
  <td align="left" class="table2"> 
    <b>$Env{"Box0"}$Text{"Compose answer for ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</b>
  </td>
</tr>
<tr>
  <td align="left" valign="top" class="table1">

  <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="compose">
  <input type="hidden" name="Action" value="AgentCompose">
  <input type="hidden" name="Subaction" value="SendEmail">
  <input type="hidden" name="QueueID" value="$Data{"QueueID"}">
  <input type="hidden" name="TicketID" value="$Data{"TicketID"}">
  <input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <input type="hidden" name="Email" value="$Data{"Email"}">
  <input type="hidden" name="InReplyTo" value="$Data{"InReplyTo"}">
  <table border="0" width="100%">
    <tr>
      <td width="20%">$Text{"From"}:</td>
      <td width="80%">$Data{"From"} <input type="hidden" name="From" value="$Data{"From"}"> <font color="red" size="-2">$Data{"From invalid"}</font></td>
    </tr>
    <tr>
      <td>$Text{"To"}:</td>
      <td><input type="text" name="To" value="$Data{"To"}" size="65"> <font color="red" size="-2">$Data{"To invalid"}</font></td>
    </tr>
    <tr>
      <td>$Text{"Cc"}:</td>
      <td><input type="text" name="Cc" value="$Data{"Cc"}" size="65"> <font color="red" size="-2">$Data{"Cc invalid"}</font></td>
    </tr>
    <tr>
      <td>$Text{"Subject"}:</td>
      <td><input type="text" name="Subject" value="$Data{"Subject"}" size="65"></td>
    </tr>
    <tr>
      <td>$Text{"Options"}:</td>
      <td>
       <a href="" onclick="SpellCheckSubmit(); return false;" onmouseover="window.status='$Text{"Spell Check"}'; return true;" onmouseout="window.status='';">$Text{"Spell Check"}</a> 
       <a href="#attachment" onmouseover="window.status='$Text{"Attachments"}'; return true;" onmouseout="window.status='';">$Text{"Attachments"}</a>
      </td>
    </tr>
    <tr>
      <td valign="top">$Text{"Text"}:</td>
      <td>
<pre>
<textarea name="Body" rows="25" cols="80" wrap="$Env{"BrowserWrap"}">
$Data{"ResponseFormat"}
</textarea>
</pre>
      </td>
    </tr>
# --
# use there are std. attachments for this response 
# --
<dtl if ($Data{"StdAttachmentsStrg"} ne "") { $Data{"StdAttachmentsTable"} = "<tr><td>$Text{"Std. Attachment"}:</td><td>$Data{"StdAttachmentsStrg"}</td></tr>"; }>
    $Data{"StdAttachmentsTable"}
#
    <tr>
      <td>$Text{"Attachment"}:</td><td><input name="file_upload" type="file" size="40" class="fixed">&nbsp;<!--<input type="button" class="button" onclick="attach()" value="$Text{"Attach"}">--><a name="attachment"></td>
    </tr>
    <tr>
      <td>$Text{"Next ticket state"}:</td>
      <td>$Data{"NextStatesStrg"}</td>
    </tr>
    <tr>
      <td>$Text{"Pending Date"} ($Text{"for pending* states"}):</td>
      <td>$Data{"PendingDateString"}</td>
    </tr>
    <tr>
      <td>$Text{"Is the ticket answered"}:</td>
      <td>$Data{"AnsweredYesNoOption"}</td>
    </tr>
    <tr>
      <td>$Text{"Time units"}$Text{"$Config{"TimeUnits"}"}:</td>
      <td><input type="text" name="TimeUnits" value="$Data{"TimeUnits"}" size="3"></td>
    </tr>
  </table>
  <br>
  <input type="submit" value="$Text{"Send mail!"}" onclick="return submit_compose();">
  </form>

  <form action="$Env{"CGIHandle"}" method="post" name="spelling" target="spelling">
  <input type="hidden" name="Action" value="AgentSpelling">
  <input type="hidden" name="Body" value="">
  <input type="hidden" name="spell_lang" value="">
  </form>

  </td> 
</tr>
</table>
<!-- end compose form -->

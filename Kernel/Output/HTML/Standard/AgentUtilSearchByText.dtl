<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
<tr>
  <td align="left" bgcolor="$Env{"BGTableColor0"}">
  <b><font color="$Env{"FontColor1"}">$Env{"Box0"}$Text{"Fulltext search"}$Env{"Box1"}</font></b>
  </font>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="center" valign="top">

<p>

$Text{"Fulltext search (e. g. "Mar*in" or "Baue*" or "martin+hallo")"}
<form action="$Env{"CGIHandle"}" method="get">
<input type="hidden" name="Action" value="AgentUtilities">
<input type="hidden" name="Subaction" value="SearchByText">
<input type="text" name="Want" size="30" value="$Data{"What"}">
<br>
$Text{"Search in"}:
<table>
  <tr>
    <td>$Text{"From"}</td>
    <td><input type="checkbox" name="What" value="From" $Data{"FromCheckBox"}></td>
    <td>$Text{"To"}</td>
    <td><input type="checkbox" name="What" value="To" $Data{"ToCheckBox"}></td>
  </tr>
  <tr>
    <td>$Text{"Subject"}</td>
    <td><input type="checkbox" name="What" value="Subject" $Data{"SubjectCheckBox"}></td>
    <td>$Text{"Cc"}</td>
    <td><input type="checkbox" name="What" value="Cc" $Data{"CcCheckBox"}></td>
  </tr>
  <tr>
    <td>$Text{"Body"}</td>
    <td><input type="checkbox" name="What" value="Body" $Data{"BodyCheckBox"}></td>
    <td>$Text{"CustomerID"}</td>
    <td><input type="checkbox" name="What" value="CustomerID" $Data{"CustomerIDCheckBox"}></td>
  </tr>
  <tr>
    <td>$Text{"Ticket free text"}</td>
    <td><input type="checkbox" name="What" value="TicketFreeText" $Data{"TicketFreeTextCheckBox"}></td>
    <td>$Text{"Article free text"}</td>
    <td><input type="checkbox" name="What" value="ArticleFreeText" $Data{"ArticleFreeTextCheckBox"}></td>
  </tr>
</table>
<input type="submit" value="$Text{"go"}">
</form>

</p>

  </td>
</tr>
</table>
<!-- end form -->


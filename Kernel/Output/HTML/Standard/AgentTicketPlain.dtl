<!-- Overview -->
<div class="WidgetPopup ARIARoleMain">

    <div class="Header">
        <h1>$Text{"Email Text Plain View"}</h1>
        <p>
            <a href="">$Text{"Cancel & close window"}</a>
        </p>
    </div>

    <div class="ContentColumn">
        <div class="WidgetGradient Short MinHeight">
            <div class="Header">
                <h2>
                    $Text{"Plain"} $Config{"Ticket::Hook"}: $QData{"TicketNumber"} / TicketID: $QData{"TicketID"} / ArticleID: $QData{"ArticleID"}
                    - <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Download;ArticleID=$LQData{"ArticleID"};TicketID=$LQData{"TicketID"}">$Text{"Download this email"}</a>
                </h2>
            </div>

            <div class="Content">
                <p>
                    $Data{"Text"}
                </p>
            </div>
        </div>

    </div>
</div>

<!-- Overview -->

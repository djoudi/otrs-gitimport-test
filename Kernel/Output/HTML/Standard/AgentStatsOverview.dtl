<div class="MainBox AriaRoleMain">

    <h1>$Text{"Overview"}: $Text{"Stats"}</h1>

    <table class="Sortable DataTable">
        <thead>
            <tr>
                <th class="$QData{"CSSSortID"}">

                    <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Overview;Direction=$QData{"LinkSortID"};;OrderBy=ID;StartHit=$LQData{"StartHit"}">
                        $Text{"$Config{"Stats::StatsHook"}"}
                    </a>
                </th>
                <th class="$QData{"CSSSortTitle"}">
                    <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Overview;Direction=$QData{"LinkSortTitle"};OrderBy=Title;StartHit=$LQData{"StartHit"}">
                        $Text{"Title"}
                    </a>
                </th>
                <th class="$QData{"CSSSortObject"}">
                    <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Overview;Direction=$QData{"LinkSortObject"};OrderBy=Object;StartHit=$LQData{"StartHit"}">
                        $Text{"Object"}
                    </a>
                </th>
                <th>
                    <span>$Text{"Description"}</span>
                </th>
            </tr>
        </thead>
        <tbody>
<!-- dtl:block:Result -->
            <tr>
                <td>
                    <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=View;StatID=$LQData{"StatID"}" class="AsBlock">
                        $QData{"StatNumber"}
                    </a>
                </td>
                <td>$QData{"Title"}</td>
                <td>$Text{"$Data{"ObjectName"}"}</td>
                <td title="$QData{"Description"}">$QData{"Description","50"}</td>
            </tr>
<!-- dtl:block:Result -->
        </tbody>
    </table>

    <p class="SpacingTopSmall">
        $Text{"Results"}: <strong>$QData{"Result"}</strong> - $Text{"Total hits"}: <strong>$QData{"TotalHits"}</strong> - $Text{"Page"}: $Data{"SiteNavBar"}
    </p>

</div>

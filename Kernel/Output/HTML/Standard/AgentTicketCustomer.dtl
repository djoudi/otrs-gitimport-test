<!-- dtl:block:Customer -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr>
  <td class="mainhead">
    $Env{"Box0"}$Text{"Change customer of ticket"}: $Data{"TicketNumber"}$Env{"Box1"}
  </td>
</tr>
<tr>
  <td class="menu">
    <a href="$Env{"Baselink"}$Env{"LastScreenView"}" onmouseover="window.status='$Text{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
  </td>
</tr>
</table>
<table border="0" width="100%" cellspacing="0" cellpadding="3">
<tr>
  <td class="mainbody">

  <br>

  <form action="$Env{"CGIHandle"}" method="post" name="compose">
    <input type="hidden" name="Action" value="$Env{"Action"}">
    <input type="hidden" name="Subaction" value="Update">
    <input type="hidden" name="ExpandCustomerName" value="0">
    <input type="hidden" name="TicketID" value="$QData{"TicketID"}">
    <table border="0" width="500" align="center" cellspacing="0" cellpadding="4">
      <tr>
        <td class="contenthead">$Text{"Options"}</td>
      </tr>
      <tr>
        <td class="contentbody">
          $Text{"Set customer user and customer id of a ticket"}:
          <br>
          <table>
            <tr>
              <td class="contentkey">$Text{"Customer User"}:</td>
              <td class="contentvalue"><input type="text" name="CustomerUserID" value="$QData{"CustomerUserID"}" size="40">
              <br>
              $Env{"Box0"}<a href="" onclick="document.compose.ExpandCustomerName.value='1'; document.compose.submit(); return false;" onmouseout="window.status='';" onmouseover="window.status='$Text{"Search Customer"}'; return true;"> $Text{"Search Customer"}</a>$Env{"Box1"}<br> $Data{"CustomerUserStrg"}</td>
            </tr>
            <tr>
              <td class="contentkey">$Text{"CustomerID"}:</td>
              <td class="contentvalue"> <input type="text" name="CustomerID" value="$QData{"CustomerID"}" size="40"></td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="contentfooter">
          <input class="button" accesskey="g" type="submit" value="$Text{"update"}">
        </td>
      </tr>
    </table>

    <br>

    <table border="0" width="500" align="center" cellspacing="0" cellpadding="4">
      <tr>
        <td class="contenthead">$Text{"Customer Data"}: $Data{"CustomerID"}</td>
      </tr>
      <tr>
        <td class="contentbody">

$Data{"Table"}

        </td>
      </tr>
      <tr>
        <td class="contentfooter">
          &nbsp; 
        </td>
      </tr>
    </table>

    <br>

  </td>
</tr>
</table>
<!-- dtl:block:Customer -->
<!-- dtl:block:CustomerHistory -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr>
  <td class="mainhead">
    $Env{"Box0"}$Text{"Customer history"}$Env{"Box1"}
  </td>
</tr>
<tr>
  <td class="mainbody">
     $Text{"All customer tickets."}
  </td>
</tr>
</table>
<!-- dtl:block:CustomerHistory -->

<!-- dtl:block:Body -->
<div id="Body" class="Preferences">
    <div class="Content">
<!-- dtl:block:Head -->
#       <h1>$Text{"$QData{"Header"}"}</h1>
<!-- dtl:block:Head -->
<!-- dtl:block:Item -->
        <div class="Box">
            <form action="$Env{"CGIHandle"}" enctype="multipart/form-data" method="post">
                <input type="hidden" name="Action" value="$Env{"Action"}"/>
                <input type="hidden" name="Subaction" value="Update"/>
                <input type="hidden" name="Group" value="$QData{"Group"}"/>
                <fieldset>
                    <h2>$Text{"$Data{"Label"}"}</h2>
<!-- dtl:block:Block -->
<!-- dtl:block:InputKey -->
                    <div>
                        <label for="$QData{"Name"}">$Text{"$QData{"Key"}"}</label>
                        <input title="$QData{"Name"}" type="text" id="$QData{"Name"}" name="$QData{"Name"}" value="$QData{"SelectedID"}" size="20" />
                    </div>
<!-- dtl:block:InputKey -->
<!-- dtl:block:Input -->
                    <div>
                        <label for="$QData{"Name"}">$Text{"$QData{"Key"}"}</label>
                        <input title="$QData{"Name"}" type="text" id="$QData{"Name"}" name="$QData{"Name"}" value="$QData{"SelectedID"}" size="20" />
                    </div>
<!-- dtl:block:Input -->
<!-- dtl:block:Option -->
                    <div>
                        <label for="$QData{"Name"}">$Text{"$QData{"Key"}"}</label>
                        $Data{"Option"}
                    </div>
<!-- dtl:block:Option -->
<!-- dtl:block:Upload -->
                    <div>
                        <label for="$QData{"Name"}">$Text{"$QData{"Key"}"}</label>
                        <input title="$QData{"Name"}" id="$QData{"Name"}" name="$QData{"Name"}" type="file" size="20" /><br/>
                        <div title="$QData{"Filename"}">$QData{"Filename","30"}</div>
                    </div>
<!-- dtl:block:Upload -->
<!-- dtl:block:Password -->
                    <div>
                        <label for="$QData{"Name"}">$Text{"$QData{"Key"}"}</label>
                        <input title="$QData{"Name"}" type="password" id="$QData{"Name"}" name="$QData{"Name"}" value=""}" size="20" />
                    </div>
<!-- dtl:block:Password -->
<!-- dtl:block:Block -->
                    <button type="submit" value="$Text{"Update"}">$Text{"Update"}</button>
                </fieldset>
            </form>
        </div>
<!-- dtl:block:Item -->
        <div class="Clear"></div>
    </div>
</div>
<!-- dtl:block:Body -->

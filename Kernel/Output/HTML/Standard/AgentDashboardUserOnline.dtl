<!-- dtl:block:ContentSmallUserOnlineFilter -->
<div class="UserFilter">
    <a href="#" id="Dashboard$QData{"Name"}Agent" class="$QData{"Agent::Selected"}">$Text{"Agents"} ($QData{"Agent"})</a>
    |
    <a href="#" id="Dashboard$QData{"Name"}Customer" class="$QData{"Customer::Selected"}">$Text{"Customers"} ($QData{"Customer"})</a>
<!-- dtl:js_on_document_complete -->
<script type="text/javascript">//<![CDATA[
    OTRS.UI.RegisterLiveEvent('click', '#Dashboard$QData{"Name"}Agent', function(){
        OTRS.AJAX.ContentUpdate($('#Dashboard$QData{"Name"}'), '$Env{"Baselink"}Action=$Env{"Action"};Subaction=Element;Name=$QData{"Name"};Filter=Agent', function () {
            OTRS.UI.Tables.InitCSSPseudoClasses($('#Dashboard$QData{"Name"}'));
        });
        return false;
    });
    OTRS.UI.RegisterLiveEvent('click', '#Dashboard$QData{"Name"}Customer', function(){
        OTRS.AJAX.ContentUpdate($('#Dashboard$QData{"Name"}'), '$Env{"Baselink"}Action=$Env{"Action"};Subaction=Element;Name=$QData{"Name"};Filter=Customer', function () {
            OTRS.UI.Tables.InitCSSPseudoClasses($('#Dashboard$QData{"Name"}'));
        });
        return false;
    });
//]]></script>
<!-- dtl:js_on_document_complete -->
<!-- dtl:block:ContentSmallTicketGenericFilterNavBar -->
    <div class="Pagination">
        $Data{"SiteNavBar"}
    </div>
<!-- dtl:block:ContentSmallTicketGenericFilterNavBar -->
</div>
<!-- dtl:block:ContentSmallUserOnlineFilter -->
<table class="DataTable">
    <tbody>
<!-- dtl:block:ContentSmallUserOnlineRow -->
        <tr>
            <td>
                $QData{"UserLastname"} $QData{"UserFirstname"}
<!-- dtl:block:ContentSmallUserOnlineRowEmail -->
                ($QData{"UserEmail","50"})
<!-- dtl:block:ContentSmallUserOnlineRowEmail -->
            </td>
        </tr>
<!-- dtl:block:ContentSmallUserOnlineRow -->
<!-- dtl:block:ContentSmallUserOnlineNone -->
        <tr>
            <td>
                $Text{"none"}
            </td>
        </tr>
<!-- dtl:block:ContentSmallUserOnlineNone -->
    </tbody>
</table>

<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr>
  <td align="left" class="table2">
    <b>$Env{"Box0"}$Text{"Bounce ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</b>
  </td>
</tr>
<tr>
  <td align="left" valign="top" class="table1">

<p>

<form action="$Env{"CGIHandle"}" method="post" name="bounce">
<input type="hidden" name="Action" value="$Env{"Action"}">
<input type="hidden" name="Subaction" value="Store">
<input type="hidden" name="QueueID" value="$Data{"QueueID"}">
<input type="hidden" name="TicketID" value="$Data{"TicketID"}">
<input type="hidden" name="ArticleID" value="$Data{"ArticleID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0">
  <tr>
    <td width="20%">$Text{"Bounce to"}:</td>
    <td width="80%"><input type="text" name="BounceTo" value="" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Next ticket state"}:</td>
    <td>$Data{"NextStatesStrg"}</td>
  </tr>
  <tr>
    <td>$Text{"Inform sender"}:</td>
    <td><input type="checkbox" name="InformSender" value="1"></td>
  </tr>
  <tr>
    <td>$Text{"From"}:</td>
    <td>$Data{"FromHTML"}</td>
  </tr>
  <tr>
    <td>$Text{"To"}:</td>
    <td><input type="text" name="To" value="$Data{"To"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Subject"}:</td>
    <td><input type="text" name="Subject" value="$Data{"Subject"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Text"}:</td>
    <td>
<textarea name="Body" rows="15" cols="$Config{"TextAreaEmailWindow"}" wrap="$Env{"BrowserWrap"}">
$Data{"Salutation"}

$Text{"$Config{"DefaultBounceText"}"}

$Data{"Signature"}

</textarea>
    </td>
  </tr>

  </table>
  <br>
  <input class="button" type="submit" value="$Text{"Send mail!"}" onclick="return submit_bounce();">
  </form>

</p>
  </td> 
</tr>
</table>
<!-- end bounce form -->

<fieldset class="TableLike FixedLabelSmall">

    <label>$Text{"Name"}:</label>
    <div class="Field">
        <a href="$Env{"Baselink"}Action=AdminCustomerCompany;Subaction=Change;CustomerID=$QData{"CustomerID"};Nav=Agent">
            $QData{"CustomerCompanyName"}
        </a>
    </div>
    <div class="Clear"></div>

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyStreet -->
    <label>$Text{"Street"}:</label>
    <div class="Field">$QData{"CustomerCompanyStreet"}</div>
    <div class="Clear"></div>
<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyStreet -->

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyZIP -->
    <label>$Text{"Zip"}:</label>
    <div class="Field">$QData{"CustomerCompanyZIP"}</div>
    <div class="Clear"></div>
<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyZIP -->

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyCity -->
    <label>$Text{"City"}:</label>
    <div class="Field">$QData{"CustomerCompanyCity"}</div>
    <div class="Clear"></div>
<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyCity -->

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyCountry -->
    <label>$Text{"Country"}:</label>
    <div class="Field">$QData{"CustomerCompanyCountry"}</div>
    <div class="Clear"></div>
<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyCountry -->

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyURL -->
    <label>$Text{"URL"}:</label>
    <div class="Field">
        <a href="$QData{"CustomerCompanyURL"}" target="_blank">
            $QData{"CustomerCompanyURL"}
        </a>
    </div>
    <div class="Clear"></div>
<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyURL -->

<!-- dtl:block:ContentSmallCustomerCompanyInformationCustomerCompanyComment -->
    <label>$Text{"Comment"}:</label>
    <div class="Field">
        <p>$QData{"CustomerCompanyComment"}</p>

        <td align="center">
            <br/>
            <table width="700" cellspacing="0" cellpadding="4">
                <tr>
                    <td class="contenthead" width="50%">
                        $Text{"User"}:$Text{"Role"} (1:n)
                    </td>
                    <td class="contenthead" width="50%">
                        $Text{"User"}:$Text{"Role"} (n:1)
                    </td>
                </tr>
                <tr class="contentbody">
                    <td align="left">
                        <table cellspacing="0" cellpadding="4" width="100%">
<!-- dtl:block:List1n-->

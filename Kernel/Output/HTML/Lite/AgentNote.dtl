<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor0"}">
  <td align="left"> 
  <b><font color="$Env{"FontColor1"}">$Env{"Box0"}$Text{"Add note to ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </td>
  <td align="right">
  <b><font color="$Env{"FontColor1"}">-</font></b>
  </td>
</tr>
</table>
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="center" valign="top" colspan="2">

<p>

<form action="$Env{"CGIHandle"}" method="post">
<input type="hidden" name="Action" value="AgentNote">
<input type="hidden" name="Subaction" value="Store">
<input type="hidden" name="SessionID" value="$Env{"SessionID"}">
<input type="hidden" name="QueueID" value="$Data{"QueueID"}">
<input type="hidden" name="TicketID" value="$Data{"TicketID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0">
  <tr>
    <td>$Text{"Subject"}:</td><td><input type="text" name="Subject" value="$Text{"$Config{"DefaultNoteSubject"}"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Text"}:</td><td>
<textarea name="Note" rows="15" cols="60">
$Text{"$Config{"DefaultNoteText"}"}
</textarea>
    </td>
  </tr>
  <tr>
    <td>$Text{"Note type"}:</td><td>$Data{"NoteStrg"}</td>
  </tr>
  </table>
<br>
<input type="submit" value="$Text{"store"}">
</form>

</p>


<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td align="left" colspan="2" class="table0">
    <b>$Env{"Box0"}$Text{"SMIME Certificate Management"}$Env{"Box1"}</b>
  </td>
</tr>
<tr align="left" valign="top">
  <td width="40%" class="table1">

  <table width="100%" cellspacing="2" cellpadding="3">
  <tr>
    <td class="table3">$Text{"Search"}:</td>
  </tr>
  <tr>
    <td align="left">

    <form action="$Env{"CGIHandle"}" method="post">
    <input type="hidden" name="Action" value="$Env{"Action"}">
    <input type="hidden" name="Subaction" value="Search">
    <table>
      <tr>
        <td>$Text{"Search for"}:</td>
        <td><input type="text" name="Search" value="$QData{"Search"}" size="20"></td>
      </tr>
    </table>
    <input class="button" type="submit" value="$Text{"Search"}">
    </form>

    </td>
  </tr>
  <tr>
    <td class="table3">$Text{"Add Certificate"}:</td>
  </tr>
  <tr>
    <td>

    <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Action" value="$Env{"Action"}">
    <input type="hidden" name="Subaction" value="AddCertificate">
    <table border="0" cellspacing="0" cellpadding="3">
#    <tr>
#      <td>$Text{"Ascii"}: </td>
#      <td> <textarea name="String" rows="6" cols="70" wrap="$Env{"BrowserWrap"}"></textarea></td>
#    </tr>
    <tr>
      <td>$Text{"File"}: </td>
      <td> <input name="file_upload" type="file" size="35" class="fixed"></td>
    </tr>
    </table>
    <input class="button" type="submit" value="$Text{"Add"}">
    </form>

    </td>
  </tr>
  <tr>
    <td class="table3">$Text{"Add Private Key"}:</td>
  </tr>
  <tr>
    <td>

    <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Action" value="$Env{"Action"}">
    <input type="hidden" name="Subaction" value="AddPrivate">
    <table border="0" cellspacing="0" cellpadding="3">
#    <tr>
#      <td>$Text{"Ascii"}: </td>
#      <td> <textarea name="String" rows="6" cols="70" wrap="$Env{"BrowserWrap"}"></textarea></td>
#    </tr>
    <tr>
      <td>$Text{"File"}: </td>
      <td> <input name="file_upload" type="file" size="35" class="fixed"></td>
    </tr>
    <tr>
      <td>$Text{"Secret"}: </td>
      <td><input type="password" name="Secret" value="$QData{"Secret"}" size="20"></td>
    </tr>
    </table>
    <input class="button" type="submit" value="$Text{"Add"}">
    </form>

    </td>
  </tr>
  </table>

  </td>
  <td width="60%" class="table1">

  <table width="100%" cellspacing="2" cellpadding="3">
  <tr>
    <td class="table3">$Text{"Result"}:</td>
  </tr>
  <tr>
    <td>

    <table border="0" width="100%">
    <tr>
        <td class="table3">$Text{"Type"}</td>
        <td class="table3">$Text{"Subject"}</td>
        <td class="table3">$Text{"Hash"}/$Text{"Fingerprint"}</td>
        <td class="table3">$Text{"Created"}/$Text{"Expires"}</td>
        <td class="table3">$Text{"Delete"}</td>
    </tr>
<!-- dtl:block:Row -->
    <tr>
        <td valign="top">$QData{"Type"}</td>
        <td valign="top">$QData{"Subject"}</td>
        <td valign="top"><a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Download&Hash=$QData{"Hash"}">$QData{"Hash","80"}</a><br>
        <div title="$QData{"Fingerprint"}">$QData{"Fingerprint","12"}</div></td>
        <td valign="top">$QData{"ShortStartDate"}<br>$QData{"ShortEndDate"}</td>
        <td valign="top" align="center"><a href="$Env{"Baselink"}Action=$Env{"Action"}&Subaction=Delete&Hash=$QData{"Hash"}">x</a></td>
    </tr>
<!-- dtl:block:Row -->

    </table>

    </td>
  </tr>

  </table>

  </td>
</tr>
</table>
<!-- end form -->
<!-- start note -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
<tr valign="top">
  <td class="table3">
    $Env{"Box0"}$Text{"Note"}$Env{"Box1"}
  </td>
</tr>
<tr valign="top">
  <td class="table1">
  <p>
  $Text{"In this way you can directly edit the certification and private keys in file system."}
  <br>
  $Text{"FIXME: WHAT IS SMIME?"}
  </p>
  </td>
</tr>
</table>
<!-- end note -->

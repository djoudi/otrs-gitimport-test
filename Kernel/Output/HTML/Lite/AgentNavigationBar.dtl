# --
# check if the admin link should be shown
# --
<dtl if ($Env{"UserIsAdmin"} eq "Yes") { $Data{"AdminLink"} = "$Env{"Box0"}<a href="$Env{"Baselink"}&Action=Admin">$Text{"AdminArea"}</a>$Env{"Box1"}"; }>
# --
# check if the stats link should be shown
# --
<dtl if ($Env{"UserIsStats"} eq "Yes") { $Data{"StatsLink"} = "$Env{"Box0"}<a href="$Env{"Baselink"}&Action=SystemStats">$Text{"Stats"}</a>$Env{"Box1"}"; }>

<!-- start NavigationBar -->
<table bgcolor="$Env{"BGTableColor1"}" border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td valign="top" align="left" width="40%">
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=Logout">$Text{"Logout"}</a>$Env{"Box1"} 
    $Data{"AdminLink"}
    <br>
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentQueueView">$Text{"QueueView"}</a>$Env{"Box1"}
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentPhone">$Text{"PhoneView"}</a>$Env{"Box1"}
  </td>
  <td align="right" width="60%">
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentUtilities">$Text{"Utilities"}</a>$Env{"Box1"}
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentPreferences">$Text{"Preferences"}</a>$Env{"Box1"}
    $Data{"StatsLink"}
    $Env{"Box0"}<a href="#end">$Text{"end"}</a>$Env{"Box1"}
    <br>
    <!--$Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentFAQ">$Text{"FAQ"}</a>$Env{"Box1"}-->
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentMailbox&Subaction=New">$Text{"new message"} ($Data{"LockToDo"})</a>$Env{"Box1"} 
    $Env{"Box0"}<a href="$Env{"Baselink"}&Action=AgentMailbox">$Text{"Locked tickets"} ($Data{"LockCount"})</a>$Env{"Box1"} 
  </td>
</tr>
</table>
<!-- end NavigationBar -->

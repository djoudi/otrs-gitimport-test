</script>


<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr bgcolor="$Env{"BGTableColor2"}">
  <td align="left"> 
  <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Forward article of ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="left" valign="top">

  <form action="$Env{"CGIHandle"}" method="post" name="forward">
  <input type="hidden" name="Action" value="AgentForward">
  <input type="hidden" name="Subaction" value="SendEmail">
  <input type="hidden" name="SessionID" value="$Env{"SessionID"}">
  <input type="hidden" name="QueueID" value="$Data{"QueueID"}">
  <input type="hidden" name="TicketID" value="$Data{"TicketID"}">
  <input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <input type="hidden" name="Email" value="$Data{"Email"}">
  <input type="hidden" name="InReplyTo" value="$Data{"InReplyTo"}">
  <table border="0">
    <tr>
      <td>$Text{"From"}:</td><td>$Data{"SystemFromHTML"} <input type="hidden" name="From" value="$Data{"SystemFrom"}"></td>
    </tr>
    <tr>
      <td>$Text{"To"}:</td><td><input type="text" name="To" value="" size="65"></td>
    </tr>
    <tr>
      <td>$Text{"Cc"}:</td><td><input type="text" name="Cc" value="" size="65"></td>
    </tr>
    <tr>
      <td>$Text{"Subject"}:</td><td><input type="text" name="Subject" value="$Data{"Subject"}" size="65"></td>
    </tr>
    <tr>
      <td valign="top">$Text{"Text"}:</td><td>
<pre>
<textarea name="Body" rows="25" cols="80">


$Data{"Signature"}

---- $Text{"Forwarded message from"} $Data{"From"} ----

$Text{"Date"}: $Data{"Date"}
$Text{"From"}: $Data{"From"}
$Text{"To"}: $Data{"To"}
$Text{"Cc"}: $Data{"Cc"}
$Text{"Reply-To"}: $Data{"ReplyTo"}
$Text{"Subject"}: $Data{"Subject"} 
$Data{"Body"}
---- $Text{"End forwarded message"} ----
</textarea>
</pre>
      </td>
    </tr>
    <tr>
      <td>$Text{"Next ticket state"}:</td><td>$Data{"NextStatesStrg"}</td>
    </tr>
    <tr>
      <td>$Text{"Article type"}:</td><td>$Data{"ArticleTypesStrg"}</td>
    </tr>
    <tr>
      <td>$Text{"Time units"}$Text{"$Config{"TimeUnits"}"}:</td><td><input type="text" name="TimeUnits" value="" size="3"></td>
    </tr>
  </table>
  <br>
  <input type="submit" value="$Text{"Send mail!"}" onclick="return submit_forward();">
  </form>

  </td> 
</tr>
</table>
<!-- end forward form -->


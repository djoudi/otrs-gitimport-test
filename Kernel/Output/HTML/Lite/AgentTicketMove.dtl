  <tr>
    <td width="20%" class="contentkey">$Text{"Next ticket state"}:</td>
    <td></td>
    <td width="80%">$Data{"NextStatesStrg"}</td>
</tr>
<!-- dtl:block:State -->
  </table>
  <input class="button" type="submit" value="$Text{"Move"}" onclick="return submit_compose();">

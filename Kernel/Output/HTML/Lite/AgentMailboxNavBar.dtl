  $Text{"Sort by"}: 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=Age">$Text{"Age"}</a> - 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=Queue">$Text{"Queue"}</a> - 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=Priority&OrderBy=Down">$Text{"Priority"}</a> - 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=CustomerID">$Text{"CustomerID"}</a> 
    | $Text{"Order"}: 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=$Data{"SortBy"}&OrderBy=Up">$Text{"up"}</a> - 
  <a href="$Env{"Baselink"}Action=AgentMailbox&Subaction=$Env{"Subaction"}&SortBy=$Data{"SortBy"}&OrderBy=Down">$Text{"down"}</a>

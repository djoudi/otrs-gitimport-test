<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td align="left" bgcolor="$Env{"BGTableColor2"}">
  <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Close ticket"}: $Data{"TicketNumber"}$Env{"Box1"}</font></b>
  </font>
  </td>
  <td align="right" bgcolor="$Env{"BGTableColor2"}">
  <b><font color="$Env{"FontColor0"}">-</font></b>
  </font>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}">
  <td align="center" valign="top" colspan="2">
<p>

<form action="$Env{"CGIHandle"}" method="post">
<input type="hidden" name="Action" value="AgentClose">
<input type="hidden" name="Subaction" value="Store">
<input type="hidden" name="SessionID" value="$Env{"SessionID"}">
<input type="hidden" name="QueueID" value="$Data{"QueueID"}">
<input type="hidden" name="TicketID" value="$Data{"TicketID"}">
<input type="hidden" name="NextScreen" value="$Data{"NextScreen"}">
  <table border="0">
  <tr>
    <td>$Text{"Subject"}:</td><td><input type="text" name="Subject" value="$Text{"$Config{"DefaultCloseNoteSubject"}"}" size="60"></td>
  </tr>
  <tr>
    <td>$Text{"Note Text"}:</td><td>
<textarea name="Text" rows="15" cols="60">
$Text{"$Config{"DefaultCloseNoteText"}"}
</textarea>
    </td>
  </tr>
  <tr>
    <td>$Text{"Note type"}:</td><td>$Data{"NoteTypesStrg"}</td>
  </tr>
  <tr>
    <td>$Text{"Close type"}:</td><td>$Data{"NextStatesStrg"}</td>
  </tr>
  </table>
<br>
<input type="submit" value="$Text{"store"}">
</form>

</p>

  </td> 
</tr>
</table>
<!-- end form -->


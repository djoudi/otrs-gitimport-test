<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="1">
<tr bgcolor="$Env{"BGTableColor2"}" align="center">
  <td> 
    <b><font color="$Env{"FontColor0"}">$Env{"Box0"}$Text{"Change Password"}$Env{"Box1"}</font></b>
  </td>
</tr>
<tr bgcolor="$Env{"BGTableColor1"}" align="center" valign="top">
  <td>
    <center>
    <p>
    <form action="$Env{"CGIHandle"}" method="post">
    <input type="hidden" name="Action" value="$Env{"Action"}">
    <input type="hidden" name="Subaction" value="UpdatePw">
    <table border="0">
    <tr>
      <td>$Text{"New password"}:</td><td><input type="password" name="NewPw" value="" size="12"></td>
    </tr>
    <tr>
      <td>$Text{"New password again"}:</td><td><input type="password" name="NewPw1" value="" size="12"></td>
    </tr>
    </table>
    <br>
    <input type="submit" value="$Text{"update"}">
    </form>
    </p>
    </center>
  </td> 
</tr>
</table>
<!-- end form -->


<!-- start plain article -->
<table border="0" width="100%" cellspacing="0" cellpadding="3" cols="2">
<tr>
  <td align="left" class="table0">
    <b>$Env{"Box0"}$Text{"Plain"}$Env{"Box1"}</b>
  </td>
  <td align="right" class="table0">
   <b>
     $Env{"Box0"}$Text{"TicketID"}: $Data{"TicketID"} / $Text{"ArticleID"}: $Data{"ArticleID"}$Env{"Box1"}

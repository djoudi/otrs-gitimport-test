# should i show  the zoom link?
<dtl set $Data{"Link"} = "-">
<dtl if ($Data{"ArticleID"} ne "0") { $Data{"Link"} = "<a href="$Env{"Baselink"}Action=AgentZoom&TicketID=$Data{"TicketID"}&ArticleID=$Data{"ArticleID"}" onmouseover="window.status='$Text{"Zoom"}'; return true;" onmouseout="window.status='';">x</a>"; }>

<!-- start row-->
<tr> 
  <td>
  $Quote{"$Data{"HistoryType"}"}
  </td>
  <td>
  <div title="$Quote{"$Data{"Name"}"}">$Quote{"$Data{"Name"}","100"}</div>
  </td>
  <td align="CENTER">
    $Data{"Link"}
  </td>
  <td>
  <div title="$Quote{"$Data{"CreateBy"} ($Data{"UserFirstname"} $Data{"UserLastname"})"}">
  $Quote{"$Data{"CreateBy"}"} ($Quote{"$Data{"UserFirstname"} $Data{"UserLastname"}","20"})
  </div>
  </td>
  <td>
  $TimeLong{"$Data{"CreateTime"}"}
  </td>
</tr>
<!-- end row -->

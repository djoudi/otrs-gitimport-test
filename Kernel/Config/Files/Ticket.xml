<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Framework">
    <CVS>$Id: Ticket.xml,v 1.1 2005-04-08 07:03:36 martin Exp $</CVS>
    <ConfigItem Name="Ticket::NumberGenerator" Status="required">
        <Description Lang="en">The Ticket Number Generator Module.</Description>
        <Description Lang="de">Das Ticket Nummer Generator Modul.</Description>
        <Group>Ticket</Group>
        <SubGroup>TicketNumberGenerator</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Kernel::System::Ticket::Number::Date">Date</Item>
                <Item Key="Kernel::System::Ticket::Number::DateChecksum" Type="Selected">DateChecksum</Item>
                <Item Key="Kernel::System::Ticket::Number::Random">Random</Item>
                <Item Key="Kernel::System::Ticket::Number::AutoIncrement">AutoIncrement</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::NumberGenerator::AutoIncrement::MinCounterSize" Status="required">
        <Description Lang="en">Min. ticket counter size.</Description>
        <Description Lang="de">Min. größe des Ticket-Zählers.</Description>
        <Group>Ticket</Group>
        <SubGroup>TicketNumberGenerator</SubGroup>
        <Setting>
            <String Regex="^[0-9]$">5</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::Frontend::SearchLimit" Status="required">
        <Description Lang="en">Search limit for ticket frontend.</Description>
        <Description Lang="de">Hier legen Sie das Ergebnislimit für die Ticketsuche fest.</Description>
        <Group>Ticket</Group>
        <SubGroup>Misc</SubGroup>
        <Setting>
            <String Regex="^[0-9]$">5000</String>
        </Setting>
    </ConfigItem>

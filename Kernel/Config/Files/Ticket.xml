<?xml version="1.0" encoding="iso-8859-1"?>
<otrs_config version="1.0" init="Application">
    <CVS>$Id: Ticket.xml,v 1.4 2005-04-14 09:20:07 tr Exp $</CVS>
    <ConfigItem Name="Ticket::Hook" Required="1" Valid="1">
        <Description Lang="en">To set the Ticket identifier. Some people want to set this to e. g. 'Call#', 'MyTicket#' or 'Ticket#'.</Description>
        <Description Lang="de">Hiermit kann der Ticket-Identifikator gesetzt werden. Manche Kunden wollen Benennen ihn z. B. als 'Call#' oder 'MyTicket#'. Als Standardeinstellung wird 'Ticket#' geliefert</Description>
        <Group>Ticket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String>Ticket#</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::NumberGenerator" Required="1" Valid="1">
        <Description Lang="en">The Ticket Number Generator Module.</Description>
        <Description Lang="de">Das Ticket Nummer Generator Modul.</Description>
        <Group>Ticket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option Location="Kernel/System/Ticket/Number/*.pm" SelectedID="Kernel::System::Ticket::Number::DateChecksum"></Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::NumberGenerator::AutoIncrement::MinCounterSize" Required="1" Valid="1">
        <Description Lang="en">Min. ticket counter size.</Description>
        <Description Lang="de">Min. größe des Ticket-Zählers.</Description>
        <Group>Ticket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="^[0-9]$">5</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::Frontend::SearchLimit" Required="1" Valid="1">
        <Description Lang="en">Search limit for ticket frontend.</Description>
        <Description Lang="de">Hier legen Sie das Ergebnislimit für die Ticketsuche fest.</Description>
        <Group>Ticket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="^[0-9]$">5000</String>
        </Setting>
    </ConfigItem>
